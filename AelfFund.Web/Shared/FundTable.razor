<MudSimpleTable Style="overflow-x: auto;">
    <thead>
        <tr>
            <th>Project</th>
            <th>Address</th>
            <th>Donated</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var funder in Funders)
        {
            <tr>
                <td><a href="project/@funder.ProjectId" style="text-decoration: underline;">@funder.ProjectName</a></td>
                <td>@funder.Address.</td>
                <td>@funder.Amount ELF</td>
                <td>
                    @if (CurrentAddress == funder.Address)
                    {
                        <MudButton OnClick="() => Cancel(funder.ProjectId, funder.Amount)">Cancel</MudButton>
                    }
                </td>
            </tr>
        }

    </tbody>
</MudSimpleTable>

