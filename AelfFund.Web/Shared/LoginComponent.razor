@using AelfFund.Web.Models
@inject UserViewModel BindingContext

@if(BindingContext.HasExtension)
{
    if(BindingContext.IsConnected)
    {
        <MudText Typo="Typo.body1" Class="ml-3">@BindingContext.Address</MudText>
        <MudIconButton Icon="@Icons.Material.Filled.Logout" Color="Color.Inherit" Edge="Edge.End" OnClick="Logout" />

    }
    else
    {
        <MudButton Color="Color.Inherit" OnClick="Login">@ButtonText</MudButton>
    }
}
else
{
    <MudButton Color="Color.Inherit" OnClick="InstallDialog">Connect Wallet</MudButton>
}