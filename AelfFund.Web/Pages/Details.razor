@page "/project/{id}"
@if (Project == null)
{
    return;
}

<PageTitle>@Project.Name</PageTitle>

<h1>@Project.Name</h1>

<MudGrid Spacing="2" Justify="Justify.Center">

    <MudItem>
        <ProjectCard Project="Project"></ProjectCard>
    </MudItem>

    <MudItem>
        <h2>Fund this project</h2>
        <MudNumericField @bind-Value="Fund" Label="Donate (ELF)" Variant="Variant.Outlined" Step=".2M"></MudNumericField> ELF
        <MudButton Color="Color.Primary" OnClick="FundProject">Fund</MudButton>
    </MudItem>

    <MudItem>
        <MudPaper Class="pa-4">
            <MudChart ChartType="ChartType.Pie" InputData="@data" @bind-SelectedIndex="Index" InputLabels="@labels" Width="300px" Height="300px" />
        </MudPaper>
    </MudItem>

    <MudItem>
        <FundTable></FundTable>
    </MudItem>


</MudGrid>

